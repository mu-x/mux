<html>

<head>
    <title>WebFS: <%= path %></title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
    <h1>
        <img src="/favicon.ico" alt="Folder"/> <%= path.replace('/', ' / ') %>
    </h1>
    </header>

    <section>
    <% if (typeof message != 'undefined') { %>
        <h2><%= message %><h2>
    <% } %>
    <% if (typeof items != 'undefined') { %>
        <div class="grid-container">
            <% (items).forEach(item => { %>
                <div class="grid-item">
                <a href="<%= item.link %>">
                    <img class="preview" src="<%= item.preview %>" alt="Preview"/>
                    <br>
                    <%= item.text %>
                </a>
                </div>
            <% }) %>
        </div>
    <% } %>
    </section>

    <footer>
    Github: <a href="https://github.com/mu-x/mux">https://github.com/mu-x/mux</a>
    <br>
    Icons made by 
    <a href="https://www.flaticon.com/authors/smashicons" title="Smashicons">Smashicons</a>
    from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
    is licensed by 
    <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">
        CC 3.0 BY
    </a>    
    </footer>
</body>

</html>
