# ~/.muxrc to be included in ~/.bashrc
[ ! "$MUX_HOME" ] && exit 0
MUX=true

source $MUX_HOME/scripts/resources/tools.sh
export LESS=FRX

if mux_is_windows; then
    export PATH="/usr/local/bin:/usr/bin:/bin:$PATH"
    export PATH="$PATH:/c/Program Files (x86)/Meld"
else
    export PYTHONPATH+=":$MUX_HOME/example/python"
fi

alias la="ls -a"
alias ll="ls -l"
mux_is_osx && alias ls="ls -G"

alias e=mux-open
alias f=mux_find
alias g=mux-grep
alias p=mux-python
alias s=mux_silent_run && complete -F _mux_silent_run s
alias ss='USE_SUDO=1 mux_silent_run' && complete -F _mux_silent_run ss

alias idea="mux_silent_run intellij-idea-community"
alias meld="mux_silent_run meld"
alias pycharm="mux_silent_run pycharm"
alias thg="mux_silent_run thg"
alias wireshark="USE_SUDO=1 mux_silent_run wireshark"
alias gitc="mux_silent_run git cola"

if [ $(basename $SHELL) == bash ]; then
    COLOR=${MUX_HOST_COLOR:-34}
    PS1='\n\[\033[01;32m\]\u \[\033[01;'$COLOR'm\]@\h \[\033[01;32m\]\D{%H:%M:%S} \[\033[01;'$COLOR'm\]\w\[\033[00m\]\n\$ '
    mux_bash_history 1000000000
fi

mux_use_ssh_keys $HOME/.ssh/* >/dev/null 2>&1
mux_local_PATH "${MUX_LOCAL_BINS:-"$HOME/bins"}"
mux_start_dir "$MUX_START_DIR"
mux_tmux "$MUX_TMUX"

